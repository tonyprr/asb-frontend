	font-style: normal;
	font-weight: normal;
	src:url('../fonts/HeldustryFT_Regular.ttf') format('truetype');
}

@font-face {
	font-family: 'mangal';
	font-style: normal;
	font-weight: normal;
	src:url('../fonts/mangal.ttf') format('truetype');
}

