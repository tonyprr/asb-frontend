marron = #7d6350

.nav-mobile
	display none
	position fixed
	top 0
	height 100%
	z-index 999999
	width 86%
	overflow-x none
	overflow-y auto
	font-family 'Heldustry'
	font-weight bold
	background white
	color marron
	box-shadow inset -1em -0.2em 1.3em 1px rgba(grey, 0.5), inset 0 -2.5em 0 0 marron
	font-size 1.3em
	ul
		list-style-type none
		margin 0
		margin-top 2em
		padding 0
		li
			margin-top 0em
			padding-left 1em
			padding-top 0.5em
			padding-bottom 0.5em
			border-bottom solid marron 0.06em
			a
				&:link
				&:hover
				&:visited
				&:active
					color marron
					text-decoration none
			&:hover
			&.active
				width 100%
				height 100%
				color white
				background-color marron
				a
					&:link
					&:hover
					&:visited
					&:active
						color white
						text-decoration none	



@media screen and (max-width:766px ) and (min-width:420px )
	.nav-mobile
		width 300px

